{
    "compilerOptions": {
        "allowJs": true,
        "esModuleInterop": true,
        "incremental": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "module": "esnext",
        "moduleResolution": "bundler",
        "noEmit": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": false,
        "target": "esnext"
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
